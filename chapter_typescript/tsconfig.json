{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": "src",
        "paths": {
            // * 아스타리스크
            "component/*": ["component/*"],
            "utils/*": ["utils/*"]
        }
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src"]
}
